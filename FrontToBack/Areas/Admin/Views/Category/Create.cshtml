@model Category
@{
    ViewData["Title"] = "Create Category";
}

    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Category</h4>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter Category Name" autocomplete="off">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            @*<input asp-for="Description" class="form-control" placeholder="Enter Category Description" autocomplete="off">*@
                            <textarea asp-for="Description" id="editor"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-action="Index" class="btn btn-dark btn-icon-text">
                            Go Back
                            <i class="mdi mdi-keyboard-backspace btn-icon-append"></i>
                        </a>                       
                    </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts{ 
    <partial name="_Validation"/>
    <script src="https://cdn.ckeditor.com/ckeditor5/19.1.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}