@model Category
@{
    ViewData["Title"] = "Delete Category";
}

    <div class="row">
        <div class="col-12">
            <h2>@Model.Name</h2>
            <p>@Html.Raw(Model.Description)</p>
            <p class="text-danger">Are you sure to delete this item? Warning: This action is permanent!</p>
        </div>
        <div class="col-12">
            <form class="forms-sample" method="post">                
                <button type="submit" class="btn btn-danger mr-2">Delete</button>
            </form>
        </div>
    </div>
<div class="row justify-content-end mt-5 mr-5">
    <a asp-action="Index" class="btn btn-dark btn-icon-text">
        Go Back
        <i class="mdi mdi-keyboard-backspace btn-icon-append"></i>
    </a>
</div>

