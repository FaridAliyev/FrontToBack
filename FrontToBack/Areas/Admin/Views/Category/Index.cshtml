@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category List</h4>
                <p class="card-description">
                    Here you can see all categories
                </p>
                <a asp-action="Create" class="btn btn-success btn-icon-text">
                    Create
                    <i class="mdi mdi-apps btn-icon-append"></i>
                </a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name.ToUpper()
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-icon-text">
                                            Details
                                            <i class="mdi mdi-account-card-details btn-icon-append"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-icon-text">
                                            Edit
                                            <i class="mdi mdi-pencil btn-icon-append"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-icon-text">
                                            Delete
                                            <i class="mdi mdi-delete btn-icon-append"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

